  "homepage": "https://github.com/rish405/escape-regexp-modern#readme",
  "bugs": {
    "url": "https://github.com/rish405/escape-regexp-modern/issues"
  },
  "keywords": [
    "regex",
    "escape",
    "regexp",
    "typescript",
    "esm",
    "cjs"
  ],
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.6.3",
